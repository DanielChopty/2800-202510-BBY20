<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8>
        <title><%= title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>

        <%- include('templates/header') %>

        <main class="container my-4">
            <div class="mx-auto" style="max-width: 700px;">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title mb-3"><%= poll.title %></h2>

                        <% if (poll.tags?.length) { %>
                            <p>
                                <% poll.tags.forEach(tag => { %>
                                    <span class="badge bg-secondary"><%= tag %></span>
                                <% }) %>
                            </p>
                        <% } %>

                        <% 
                            const pollIdStr = poll._id.toString();
                            const hasVoted = votedPolls[pollIdStr];
                        %>

                        <% if (hasVoted) { %>
                            <% const totalVotes = poll.choices.reduce((sum, c) => sum + c.votes, 0); %>
                            <% poll.choices.forEach(choice => {
                                const pct = totalVotes ? ((choice.votes / totalVotes) * 100).toFixed(1) : 0;
                            %>
                                <div class="mb-2">
                                    <strong><%= choice.text %></strong>
                                    <span class="text-muted">
                                        (<%= choice.votes %> votes, <%= pct %>%)
                                    </span>
                                    <div class="progress mt-1">
                                        <div class="progress-bar" role="progressbar"
                                            style="width: <%= pct %>%;" 
                                            aria-valuenow="<%= pct %>" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            <% }); %>

                            <form action="/unvote" method="POST" class="mt-3">
                                <input type="hidden" name="pollId" value="<%= poll._id %>">
                                <button type="submit" class="btn btn-sm btn-outline-danger">Remove my vote</button>
                            </form>

                        <% } else { %>
                            <form action="/vote" method="POST">
                                <input type="hidden" name="pollId" value="<%= poll._id %>">

                                <% poll.choices.forEach((choice, idx) => { %>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                            type="radio"
                                            name="choiceText"
                                            id="choice-<%= idx %>"
                                            value="<%= choice.text %>"
                                            required>
                                        <label class="form-check-label" for="choice-<%= idx %>">
                                            <%= choice.text %>
                                        </label>
                                    </div>
                                <% }) %>

                                <button type="submit" class="btn btn-primary mt-2">Vote</button>
                            </form>
                        <% } %>
                    </div>
                </div>

                <a href="/polls" class="btn btn-link mt-4">Back to all polls!</a>
            </div>
        </main>

        <%- include('templates/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>