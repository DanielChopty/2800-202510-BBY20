<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %> - Admin Dashboard</title>

  <!-- Updated Bootstrap CSS to the latest version -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Custom CSS (if you have any additional styling) -->
  <link rel="stylesheet" href="/styles.css">

</head>

<body class="bg-light">

  <!-- Header (you can adjust the header content if necessary) -->
  <%- include('templates/header') %>

  <div class="container my-5">
    <div class="card shadow border-0 rounded-4 p-4">
      <h1 class="mb-4">Admin Dashboard</h1>
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.name %></td>
              <td><%= u.email %></td>
              <td><%= u.user_type %></td>
              <td>
                <% if (u._id.toString() !== user._id.toString()) { %>
                  <% if (u.user_type === 'admin') { %>
                    <a href="/demote/<%= u._id %>" class="btn btn-danger btn-sm">Demote</a>
                  <% } else { %>
                    <a href="/promote/<%= u._id %>" class="btn btn-success btn-sm">Promote</a>
                  <% } %>
                <% } else { %>
                  <span class="text-muted">You</span>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer (you can adjust the footer content if necessary) -->
  <%- include('templates/footer') %>

  <!-- Updated Bootstrap JS to the latest version -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
